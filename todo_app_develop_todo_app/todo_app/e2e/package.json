{
  "name": "e2e",
  "type": "module",
  "scripts": {
    "test": "NODE_ENV=test jest",
    "test:get_tasks": "npm run test -- -t 'get tasks'",
    "test:add_todo": "npm run test -- -t 'add todo'",
    "test:done_todo": "npm run test -- -t 'done todo'",
    "test:clear_all_done_tasks": "npm run test -- -t 'clear all done tasks'",
    "test:welcome_message": "npm run test -- -t 'welcome message'",
    "lint:check": "eslint",
    "lint:fix": "eslint --fix",
    "format:check": "prettier --check 'src/**/*.ts'",
    "format:fix": "prettier --write 'src/**/*.ts'"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "jest": "^29.7.0",
    "jest-dev-server": "^11.0.0",
    "jest-puppeteer": "^11.0.0",
    "puppeteer": "^24.2.1",
    "ts-jest": "^29.2.5"
  }
}
